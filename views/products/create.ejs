<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs',{style:'login.css'}) %>
  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <a href="https://www.glitter-graphics.com" class="glitter__fija">
        <img
          src="https://dl.glitter-graphics.net/pub/1304/1304631c5zp4bspmn.gif"
          width="53"
          height="148"
        />
      </a>
      <h1 class="titulo__register">Crear producto</h1>
      <form action="get" class="form-register">
        <label for="nombre">Nombre</label>
        <input
          type="text"
          id="nombre"
          placeholder="Nombre"
          required
        />

        <label for="description">Descripción</label>
        <textarea name="description" id="description" placeholder="Breve descripción del producto"></textarea>
        <label for="imagen">Agrega una imagen</label>
        <input
          type="file"
          id="file"
        />

        <label for="categoria">Categoría:</label>
        <select id="categoria" name="categoria">
          <option value="ropa">Ropa</option>
          <option value="accesorios">Accesorios</option>
          <option value="stickers">Stickers</option>
        </select>

        <label for="precio">Precio:</label>
        <input type="number" id="precio" name="precio" step="0.01" value="0.00">

        <button type="submit">Agregar</button>
      </form>
      <div class="login-register-link">
        <span>¿Querés editar un producto?</span>
        <a href="/editar">Hacé click acá</a>
      </div>
    </main>
    <%- include('../partials/footer.ejs') %>
    <%- include('../partials/carrito.ejs') %>
        <script>
  document.querySelector(".menu").addEventListener("click", () => {
    const nav = document.querySelector("nav");
    nav.classList.toggle("nav-visible");
  });
</script>
  </body>
</html>
