<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs',{style:'catalogo.css'}) %>
  <body>
    <%- include('../partials/header.ejs') %>
    <main>
      <h1>Todos los productos</h1>

      <a href="/create"><button>Crear producto</button></a>

      <div class="productos-container">
        <% products.forEach(product => { %>
        <div class="producto">
          <div class="btn-producto">

            <a href="/edit/<%= product.id %>">
              <button>Modificar</button>
            </a>

            <form
              action="/delete/<%= product.id %>"
              method="POST"
              style="display: inline"
            >
              <button type="submit">Eliminar</button>
            </form>
          </div>

          <a href="/detail/<%= product.id %>">
            <img
              src="/media/productos/<%= product.image ? product.image : 'default.jpg' %>"
              alt="<%= product.name %>"
            />
          </a>

          <h3><%= product.name %></h3>
          <div class="precio">$<%= product.price %></div>
          <button class="btn-comprar">AÃ±adir al carrito</button>
        </div>
        <% }) %>
      </div>
    </main>

    <%- include('../partials/footer.ejs') %>
    <%- include('../partials/carrito.ejs') %>

    <script>
      document.querySelector(".menu").addEventListener("click", () => {
        const nav = document.querySelector("nav");
        nav.classList.toggle("nav-visible");
      });
    </script>
  </body>
</html>
